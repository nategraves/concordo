type User {
  id: ID! @id
  name: String!
  email: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  projects: [Project!]!
  feedbackRounds: [FeedbackRound!]!
}

type Script {
  id: ID! @id
}

type Project {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  createdBy: User @relation(link: INLINE)
  departments: [Department]!
}

type FeedbackTarget {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  project: Project! @relation(link: TABLE)
  createdBy: User @relation(link: INLINE)
}

type Department {
  id: ID! @id
  name: String!
  projects: [Project]! @relation(link: TABLE)
}

type Media {
  id: ID! @id
  name: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  target: FeedbackTarget! @relation(link: INLINE)
}

type FeedbackRound {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  roundEnd: DateTime
  users: [User!]! @relation(link: TABLE)
}
